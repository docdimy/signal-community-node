{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2019",
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist/",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "nodes/**/*",
    "credentials/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.spec.ts",
    "dist/**/*"
  ]
}
